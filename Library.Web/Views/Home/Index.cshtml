@{
    ViewData["Title"] = "Home Page";
    ViewData["Card Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Library Management System</h1>
</div>

<div class="container mt-5">
    <h2>Quick Access</h2>
    <div class="row">
        <div class="col-md-4 d-flex">
            <div class="card flex-fill text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Books</h5>
                    <p class="card-text">Easily add new books, edit existing entries, or delete books that are no longer in circulation. Keep your catalog up to date for all users.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card flex-fill text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Members</h5>
                    <p class="card-text">View and manage library members' profiles. AddAsync new members, update their information, or remove inactive accounts to maintain an organized membership.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card flex-fill text-center">
                <div class="card-body">
                    <h5 class="card-title">Checkouts</h5>
                    <p class="card-text">Oversee the checkout process for books. Manage current loans and track due dates to ensure timely returns and maintain inventory.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 d-flex">
            <div class="card flex-fill text-center">
                <div class="card-body">
                    <h5 class="card-title">Penalties</h5>
                    <p class="card-text">Manage overdue fines and penalties for late returns. Ensure that all members are aware of their responsibilities and any associated fees.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card flex-fill text-center">
                <div class="card-body">
                    <h5 class="card-title">Returns</h5>
                    <p class="card-text">Facilitate the return process for borrowed books. Ensure accurate logging of returned items and update inventory to reflect current availability.</p>
                </div>
            </div>
        </div>
    </div>
</div>
